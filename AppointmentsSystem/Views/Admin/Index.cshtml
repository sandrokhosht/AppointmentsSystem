@model UserListVM

@{
    ViewData["Title"] = "Index";
}

<div class="mb-2">
    <a asp-action="CreateUser" class="btn btn-success">Add the user</a>
</div>

<table class="table table-dark">
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>
                    <div class="card-footer">
                        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-primary">
                            Edit
                        </a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>